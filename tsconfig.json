{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    // "allowImportingTsExtensions": true,
    // "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"],
"ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
